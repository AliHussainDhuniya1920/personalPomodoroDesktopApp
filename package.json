{
  "name": "personal-pomodoro",
  "packageManager": "yarn@4.6.0",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A simple pomodoro app to boost your productivity",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "alihussaindhuniya.com.np",
    "productName": "personal-pomodoro-app",
    "copyright": "Â© 2025 Ali Hussain Dhuniya",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!node_modules/.cache",
      "!scripts",
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "assets/**",
      "papercut.mp3"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "pomodoro, productivity, timer"
  ],
  "author": "alihussaindhuniya",
  "license": "ISC",
  "devDependencies": {
    "electron": "34.0.2",
    "electron-builder": "25.1.8"
  },
  "volta": {
    "node": "22.14.0"
  }
}
